<h1>New Game</h1>
<div class="letras-container">
  <% @letters.each do |letter| %>

  <div class="letra"> <%=letter%> </div>

  <%end%>
</div>

<div class="formulario">
  <form action="/score" method="POST" name="userWordForm">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Ingrese una palabra" name="attempt" aria-describedby="button-addon2">
       <% @letters %>
      <button class="btn btn-outline-primary" type="submit" id="button-addon2">Play</button>
    </div>
  </form>
</div>
